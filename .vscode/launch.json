{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run API (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "services.retrieval_api.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Run API (Python program)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/services/retrieval_api/main.py",
      "args": [],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}


